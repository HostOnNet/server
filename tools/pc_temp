function findCpuTemp($output) {
    $cpuTemp = [];

    foreach ($output as $line) {
        if (preg_match('/Core (\d):\s+\+([\d\.]+).*/',$line, $match)) {
            //echo "matched => $line\n";
            //print_r($match);
            $cpuTemp[$match[1]] = $match[2];
        }
    }

    return $cpuTemp;
}

function findGpuTemp($output) {
    foreach ($output as $line) {
        if (preg_match('/temp1:\s+\+([\d\.]+)Â°C  \(.*\)/',$line, $match)) {
            return $match[1];
        }
    }
}
